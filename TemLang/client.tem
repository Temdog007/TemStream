}

inlineC "MAKE_DEFAULT_LIST(UserInput);"

struct ClientConfiguration {
    ClientAuthentication authentication
    string ttfFile
    string hostname
    i32 fontSize
    i32 windowWidth
    i32 windowHeight
    u16 port
    bool noGui
    bool noAudio
    bool showLabel
    bool fullscreen
}

struct Rect {
    i32 x
    i32 y
    i32 w
    i32 h
}

variant OptionalRect {
    null none
    Rect rect
}

struct FRect {
    f32 x
    f32 y
    f32 w
    f32 h
}

enum MoveMode {
    None
    Position
